<div class="container mt-5" style="width: 700px;">
  <h2 class="my-3">Login</h2>
  <%= form_with model: @user, url: sessions_path do |form| %>
    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <div class="d-flex mb-3">
      <%= form.check_box :remember_me %>
      <%= form.label :remember_me, class: "ms-3" %>
    </div>

    <%= form.submit "Sign in", class: "btn btn-success rounded-1 mb-3" %>
  <% end %>
  <%= link_to "Sign up", new_registration_path, class: "fs-5" %>
</div>
